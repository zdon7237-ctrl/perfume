page { background: #f5f5f5; display: flex; flex-direction: column; height: 100%; }
.container { height: 100%; }

/* 顶部标签 */
.tabs-nav {
  height: 44px; background: white; white-space: nowrap; 
  display: flex; border-bottom: 1rpx solid #eee;
}
.tab-item {
  display: inline-block; padding: 0 15px; line-height: 42px;
  font-size: 14px; color: #666;
}
.tab-item.active {
  color: #000; font-weight: bold; border-bottom: 2px solid #000;
}

/* 列表区 */
.order-list { flex: 1; padding: 10px; box-sizing: border-box; }

.order-card {
  background: white; border-radius: 8px; margin-bottom: 12px;
  padding: 12px;
}

.card-header {
  display: flex; justify-content: space-between; font-size: 12px;
  border-bottom: 1px solid #f8f8f8; padding-bottom: 8px; margin-bottom: 8px;
}
.order-time { color: #999; }
.status-text { font-weight: bold; color: #333; }

.goods-row {
  display: flex; margin-bottom: 10px; background: #fafafa; padding: 5px;
}
.goods-img { width: 60px; height: 60px; background: #eee; margin-right: 10px; }
.goods-info { flex: 1; }
.goods-name { font-size: 13px; color: #333; }
.goods-spec { font-size: 12px; color: #999; margin-top: 5px; }
.goods-price { font-size: 13px; font-weight: bold; }

.card-footer {
  display: flex; justify-content: space-between; align-items: center;
  margin-top: 10px; padding-top: 10px; border-top: 1px solid #f8f8f8;
}
.total-price { font-size: 14px; font-weight: bold; }

.btn-group { display: flex; gap: 10px; }
.btn.sm {
  font-size: 12px; padding: 5px 12px; margin: 0; line-height: 1.5;
  background: white; border: 1px solid #ddd; color: #333; border-radius: 15px;
}
.btn.sm.primary {
  border-color: #000; background: #000; color: white;
}
.empty-tip { text-align: center; color: #999; margin-top: 50px; }