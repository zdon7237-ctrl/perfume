/* miniprogram/pages/user/user.wxss */
page {
  background-color: #F5F6F8;
  font-family: -apple-system, "Helvetica Neue", serif;
  box-sizing: border-box;
}

.container {
  /* 移除左右 padding，让卡片可以通栏显示 */
  padding-left: 0;
  padding-right: 0;
  padding-bottom: 40rpx;
}

/* --- 1. 头部用户信息 --- */
.user-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 10rpx 30rpx;
}
.user-basic-info { display: flex; align-items: center; }
.avatar-box {
  width: 100rpx; height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #E0E0E0;
  border: 2rpx solid #fff;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}
.avatar-box image, .avatar-box .avatar-text { width: 100%; height: 100%; }
.avatar-text { display: flex; align-items: center; justify-content: center; color: #fff; background: #ccc; font-size: 24rpx;}

.text-info { margin-left: 24rpx; }
.nickname { font-size: 34rpx; font-weight: 600; color: #121212; margin-bottom: 4rpx; }
.user-id { font-size: 22rpx; color: #999; font-family: 'Didot', sans-serif; }

.qr-btn {
  background: rgba(255,255,255,0.9);
  border: 1rpx solid #E0E0E0;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  color: #333;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

/* --- 2. Swiper 会员卡片 (核心修复区) --- */
.member-swiper {
  /* [关键修复] 强制高度，防止塌陷为 0 或 150px */
  height: 420rpx !important; 
  width: 100%;
  margin-bottom: 30rpx;
  
  /* [关键修复] 确保层级较高，不被遮挡 */
  position: relative;
  z-index: 10;
  background: transparent;
}

.swiper-item-wrapper {
  /* 确保内部容器撑满高度 */
  height: 100%;
  box-sizing: border-box;
  /* 左右留一点空隙 */
  padding: 0 10rpx; 
}

.member-card {
  width: 100%; 
  height: 100%; 
  border-radius: 24rpx;
  padding: 40rpx;
  box-sizing: border-box;
  position: relative;
  /* 确保超出圆角的内容被剪裁 */
  overflow: hidden;
  display: flex; 
  flex-direction: column; 
  justify-content: space-between;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.15);
  color: #fff;
}

/* 卡片等级皮肤 */
.member-card.level-1 { background: linear-gradient(135deg, #F0F0F0, #DCDCDC); color: #555; }
.member-card.level-1 .benefit-pill { border-color: rgba(0,0,0,0.1); color: #555; }
.member-card.level-1 .lock-tag { color: #555; border-color: #999; }

.member-card.level-2 { background: linear-gradient(135deg, #78909C, #546E7A); }
.member-card.level-3 { background: linear-gradient(135deg, #C5A089, #8D6E63); }
.member-card.level-4 { background: linear-gradient(135deg, #424242, #212121); color: #E0C38C; }
.member-card.level-5 { background: linear-gradient(135deg, #1A1A1A, #000000); color: #FFD700; border: 1rpx solid rgba(255, 215, 0, 0.3); }

/* 卡片内部细节 */
.card-bg-pattern {
  position: absolute; right: -50rpx; top: -50rpx;
  width: 300rpx; height: 300rpx;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}
.current-tag, .lock-tag {
  position: absolute;
  top: 24rpx; right: 24rpx;
  font-size: 20rpx; padding: 4rpx 12rpx; border-radius: 8rpx;
  backdrop-filter: blur(4px);
  z-index: 10;
}
.current-tag { background: rgba(255,255,255,0.25); border: 1rpx solid rgba(255,255,255,0.4); }
.lock-tag { border: 1rpx solid rgba(255,255,255,0.3); opacity: 0.8; }

.level-badge { display: flex; flex-direction: column; z-index: 2; }
.level-badge .en-font { font-family: 'Didot', serif; font-size: 28rpx; opacity: 0.8; margin-bottom: 4rpx; }
.level-badge .cn-font { font-size: 48rpx; font-weight: bold; letter-spacing: 4rpx; }

.benefits-row { display: flex; flex-wrap: wrap; gap: 12rpx; z-index: 2; }
.benefit-pill {
  font-size: 20rpx; padding: 6rpx 16rpx;
  border: 1rpx solid rgba(255,255,255,0.3);
  border-radius: 30rpx;
}

.prog-text { font-size: 22rpx; opacity: 0.8; z-index: 2; }
.prog-text .num { font-weight: bold; font-size: 26rpx; margin: 0 4rpx; }


/* --- 通用全宽卡片容器 --- */
.section-card {
  background: #FFFFFF;
  width: 100%;
  border-radius: 0; 
  box-sizing: border-box;
  padding: 30rpx; 
  margin-bottom: 24rpx; 
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
}

/* --- 3. 统计栏 --- */
.stats-card {
  display: flex;
  justify-content: space-around; 
  align-items: center;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}
.stat-item { text-align: center; flex: 1; }
.stat-num { font-family: 'Didot', serif; font-size: 38rpx; font-weight: bold; color: #121212; margin-bottom: 8rpx;}
.stat-label { font-size: 24rpx; color: #666; }
.stat-line { width: 1rpx; height: 30rpx; background: #eee; }

/* --- 4. 订单栏 --- */
.section-header {
  display: flex; justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx; padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f9f9f9;
}
.section-title { font-size: 30rpx; font-weight: 600; color: #121212; }
.section-more { font-size: 24rpx; color: #999; display: flex; align-items: center; }
.arrow { margin-left: 6rpx; font-size: 28rpx; }

.order-icons-row { 
  display: flex; 
  justify-content: space-between; 
  padding: 0 10rpx;
}
.order-icon-item { display: flex; flex-direction: column; align-items: center; }
.icon-emoji { font-size: 48rpx; margin-bottom: 12rpx; }
.icon-label { font-size: 24rpx; color: #333; }

/* --- 5. 菜单栏 --- */
.menu-card { 
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.menu-item {
  display: flex; justify-content: space-between; align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.menu-item:last-child { border-bottom: none; }
.menu-left { display: flex; align-items: center; }
.menu-icon { font-size: 32rpx; margin-right: 20rpx; }
.menu-text { font-size: 28rpx; color: #333; }

.footer-spacer { height: 60rpx; }