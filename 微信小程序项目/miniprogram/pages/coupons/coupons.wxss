/* miniprogram/pages/coupons/coupons.wxss */

/* 页面容器：设置高级灰背景 */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-top: 100rpx; /* 留出顶部 Tab 高度 */
  box-sizing: border-box;
}

/* --- 顶部 Tabs 美化 --- */
.tabs {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 96rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 99;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.03);
}

.tab-item {
  position: relative;
  padding: 0 40rpx;
  height: 100%;
  line-height: 96rpx;
  font-size: 30rpx;
  color: #999;
  font-weight: 500;
  transition: all 0.3s;
}

.tab-item.active {
  color: #333;
  font-weight: bold;
  font-size: 32rpx;
}

.indicator {
  position: absolute;
  bottom: 12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #d4af37, #f8d775); /* 黑金风格渐变 */
  border-radius: 3rpx;
}

/* --- 优惠券列表容器 --- */
.coupon-list {
  padding: 24rpx 32rpx;
  box-sizing: border-box;
  /* 移除固定高度计算，让页面自然滚动，防止底部被遮挡 */
  /* height: calc(100vh - 100rpx); */ 
  padding-bottom: 40rpx;
}

/* --- [修复点 2] 优惠券卡片核心样式 --- */
.coupon-card {
  position: relative;
  display: flex;
  /* 原代码: height: 210rpx; 导致内容过多时按钮被裁剪 */
  /* 修改为: min-height，允许卡片根据内容自适应高度 */
  min-height: 210rpx; 
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden; 
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
  transition: all 0.1s linear;
  
  /* 背景锯齿纹理 */
  background-image: radial-gradient(circle at right top, #f5f7fa 12rpx, transparent 13rpx),
                    radial-gradient(circle at right bottom, #f5f7fa 12rpx, transparent 13rpx);
  background-size: 220rpx 100%; 
  background-position: 0 0;
  background-repeat: no-repeat;
}

.coupon-card:active {
  transform: scale(0.98);
}

/* --- 左侧金额区 --- */
.card-left {
  width: 220rpx;
  /* 确保左侧区域也能随卡片高度拉伸 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  background: linear-gradient(135deg, #2c2c2c, #4a4a4a);
  color: #ffe4b5; 
  margin-right: -1rpx; 
  flex-shrink: 0; /* 防止被压缩 */
}

.amount-wrap {
  display: flex;
  align-items: baseline;
  line-height: 1;
}

.sym {
  font-size: 32rpx;
  margin-right: 4rpx;
  font-weight: 500;
}

.num {
  font-size: 72rpx;
  font-weight: bold;
  font-family: DINAlternate-Bold, "Helvetica Neue", Helvetica, sans-serif;
}

.unit {
  font-size: 32rpx;
  margin-left: 4rpx;
  font-weight: 500;
}

.condition {
  font-size: 22rpx;
  margin-top: 16rpx;
  opacity: 0.9;
  background: rgba(255, 255, 255, 0.15);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  text-align: center; /* 确保文字居中 */
}

/* --- 右侧信息区 --- */
.card-right {
  flex: 1;
  /* 调整 Padding，给底部按钮留出空间 */
  padding: 24rpx 32rpx; 
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background: #fff;
  /* 修复锯齿背景 */
  background-image: radial-gradient(circle at left top, #f5f7fa 12rpx, transparent 13rpx),
                    radial-gradient(circle at left bottom, #f5f7fa 12rpx, transparent 13rpx);
  background-size: 100% 100%;
  background-position: 0 0;
  background-repeat: no-repeat;
}

.info {
  flex: 1;
}

.title-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  flex-wrap: wrap; /* 允许长标题换行 */
}

.limit-tag {
  font-size: 20rpx;
  color: #fff;
  background: linear-gradient(90deg, #ff5f5f, #e03e3e);
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
  margin-right: 12rpx;
  line-height: 1.4;
  flex-shrink: 0;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.date {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.desc {
  font-size: 22rpx;
  color: #ccc;
  /* 限制描述行数，防止过长 */
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 链接样式 */
.view-products-link {
  font-size: 22rpx;
  color: #d4af37; 
  margin-top: 12rpx;
  text-decoration: underline;
  opacity: 0.9;
  display: inline-block;
}

/* --- 右下角动作按钮 --- */
.action-area {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 16rpx; /* 确保与上方文字有间距 */
}

.use-btn {
  font-size: 24rpx;
  font-weight: bold;
  padding: 12rpx 32rpx;
  border-radius: 30rpx;
  background: linear-gradient(90deg, #d4af37, #f8d775);
  color: #333;
  box-shadow: 0 4rpx 12rpx rgba(212, 175, 55, 0.3);
  transition: all 0.3s;
  white-space: nowrap; /* 防止按钮文字换行 */
}

.use-btn.selected {
  background: #333;
  color: #d4af37;
  box-shadow: none;
}

/* ====== 失效状态样式 ====== */
.coupon-card.is-disabled {
  box-shadow: none;
  background-color: #eee;
}

.coupon-card.is-disabled .card-left {
  background: #ccc;
  color: #fff;
}

.coupon-card.is-disabled .card-right {
  background: #f0f0f0;
}

.coupon-card.is-disabled .title-text,
.coupon-card.is-disabled .date,
.coupon-card.is-disabled .desc {
  color: #bbb !important;
}

.coupon-card.is-disabled .limit-tag {
  background: #ddd;
  color: #999;
}

/* --- 失效水印 --- */
.status-watermark {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  width: 140rpx;
  height: 140rpx;
  border: 4rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  transform: rotate(-30deg);
  opacity: 0.6;
  pointer-events: none;
  z-index: 10;
}

.status-watermark text {
  font-size: 32rpx;
  font-weight: bold;
  color: #ddd;
  letter-spacing: 4rpx;
}

/* ====== 空状态 ====== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 160rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.empty-btn {
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 2rpx solid #333;
  border-radius: 40rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.bottom-space {
  height: 60rpx;
}