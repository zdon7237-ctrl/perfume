/* miniprogram/pages/coupons/coupons.wxss */
page { background: #f5f5f5; height: 100%; display: flex; flex-direction: column;}
.container { height: 100%; padding: 0; display: flex; flex-direction: column; }

/* Tabs */
.tabs {
  display: flex; background: #fff; height: 88rpx; align-items: center;
  position: sticky; top: 0; z-index: 10;
  width: 100%;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
}
.tab { 
  flex: 1; text-align: center; 
  font-size: 28rpx; color: #999; 
  height: 88rpx; line-height: 88rpx; 
  position: relative; 
}
.tab.active { color: #333; font-weight: bold; }
.tab.active::after {
  content: ''; position: absolute; bottom: 10rpx; left: 50%; transform: translateX(-50%);
  width: 40rpx; height: 4rpx; background: #d4af37; border-radius: 2rpx;
}

.coupon-list { flex: 1; padding: 30rpx; box-sizing: border-box; }

.coupon-card {
  display: flex; 
  flex-direction: column;
  background: #fff; border-radius: 16rpx;
  overflow: hidden; margin-bottom: 24rpx; position: relative;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

/* Main Part */
.coupon-main {
  display: flex;
  height: 200rpx; 
  position: relative;
}

.left-part {
  width: 220rpx; background: linear-gradient(135deg, #333 0%, #1a1a1a 100%);
  color: #d4af37; display: flex; flex-direction: column; align-items: center; justify-content: center;
  border-right: 2rpx dashed rgba(255,255,255,0.2);
  transition: all 0.3s;
}
.price-row { display: flex; align-items: baseline; }
.amount { font-size: 60rpx; font-weight: bold; font-family: 'DIN Alternate', sans-serif; }
.symbol { font-size: 24rpx; margin: 0 4rpx; }
.condition { font-size: 20rpx; opacity: 0.8; margin-top: 8rpx; }

.right-part { flex: 1; padding: 30rpx; display: flex; justify-content: space-between; align-items: center; position: relative; }
.info { display: flex; flex-direction: column; justify-content: center; z-index: 2; flex: 1; }
.name { font-size: 30rpx; font-weight: bold; color: #333; margin-bottom: 16rpx; display: flex; align-items: center;}
.tag { font-size: 20rpx; background: #fdf5e6; color: #d4af37; padding: 2rpx 8rpx; border-radius: 4rpx; margin-right: 12rpx; font-weight: normal; border: 1rpx solid rgba(212,175,55,0.3); }
.date { font-size: 22rpx; color: #999; }
.reason { font-size: 20rpx; color: #ccc; margin-top: 4rpx; }

.action-btn {
  font-size: 24rpx; padding: 10rpx 24rpx; border-radius: 30rpx;
  background: #f5f5f5; color: #666; z-index: 2;
  margin-right: 10rpx;
}
.action-btn.select-mode {
  background: #d4af37; color: #fff;
}

.dot-top, .dot-bottom {
  position: absolute; width: 24rpx; height: 24rpx; background: #f5f5f5; border-radius: 50%; left: 208rpx; z-index: 3;
}
.dot-top { top: -12rpx; }
.dot-bottom { bottom: -12rpx; }

.toggle-icon {
  position: absolute; right: 20rpx; bottom: 10rpx;
  padding: 10rpx;
  z-index: 10;
}
.arrow-icon {
  display: inline-block;
  font-size: 32rpx; color: #ccc;
  transition: transform 0.3s;
}
.arrow-icon.up {
  transform: rotate(180deg);
}

/* Details Part */
.coupon-details {
  background: #fff;
}
.dashed-line {
  margin: 0 30rpx;
  border-top: 1rpx dashed #eee;
}
.detail-content {
  padding: 20rpx 30rpx 30rpx 30rpx;
}
.cond-item {
  font-size: 22rpx; color: #999; line-height: 1.6;
  position: relative; padding-left: 10rpx;
}
.cond-item::before {
  content: ''; position: absolute; left: 0; top: 12rpx;
  width: 4rpx; height: 4rpx; background: #ccc; border-radius: 50%;
}

/* 【新增】查看可用商品链接样式 */
.product-link-row {
  margin-top: 16rpx;
  padding-top: 10rpx;
  border-top: 1rpx solid #f9f9f9;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #d4af37; /* 金色或品牌色 */
  font-weight: bold;
}
.link-arrow {
  font-size: 20rpx;
}

/* Disabled State */
.coupon-card.disabled .left-part {
  background: #ccc; color: #fff;
}
.coupon-card.disabled .tag {
  background: #eee; color: #999; border-color: #ddd;
}
.coupon-card.disabled .name {
  color: #999;
}

.status-stamp {
  position: absolute; right: 20rpx; top: 50%; transform: translateY(-50%) rotate(-15deg);
  font-size: 40rpx; font-weight: bold; color: rgba(0,0,0,0.05);
  border: 4rpx solid rgba(0,0,0,0.05); padding: 10rpx 20rpx; border-radius: 10rpx;
  font-family: 'Courier New', Courier, monospace;
  pointer-events: none; z-index: 1;
}

.footer-fixed {
  padding: 20rpx 30rpx; background: #fff; border-top: 1rpx solid #eee;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}
.no-use-btn {
  background: #f5f5f5; color: #666; font-size: 28rpx; border-radius: 40rpx;
}
.empty-tip { text-align: center; color: #999; margin-top: 100rpx; font-size: 26rpx;}