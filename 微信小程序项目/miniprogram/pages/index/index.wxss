/* 页面背景 */
page {
  background-color: #f5f5f5;
}

.container {
  padding: 20px;
}

.header {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #333;
  text-align: center;
}

/* 香水卡片 */
.card {
  background: white;
  border-radius: 12px;
  padding: 15px;
  margin-bottom: 15px;
  display: flex; /* 左右布局 */
  box-shadow: 0 4px 10px rgba(0,0,0,0.05);
}

/* 左侧图片区域 */
.pic-box {
  width: 80px;
  height: 80px;
  background-color: #eee;
  border-radius: 8px;
  margin-right: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 12px;
  overflow: hidden; /* 防止图片溢出圆角 */
}

.pic-box image {
  width: 100%;
  height: 100%;
}

/* 右侧文字区域 */
.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.brand {
  font-size: 12px;
  color: #888;
  letter-spacing: 1px;
  text-transform: uppercase;
}

.name {
  font-size: 16px;
  font-weight: 600;
  color: #222;
  margin: 4px 0;
}

.desc {
  font-size: 12px;
  color: #666;
  margin-bottom: 6px;
  /* 限制只显示一行，多了显示省略号 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 200px;
}

.price {
  font-size: 14px;
  font-weight: bold;
  color: #bfa36f; /* 金色，比较符合香水调性 */
}