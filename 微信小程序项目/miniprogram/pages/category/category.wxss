/* miniprogram/pages/category/category.wxss */

/* === 1. 全局重置与强制容器 === */
/* 强制所有元素使用边框盒模型，防止 padding 撑大尺寸 */
page, view, text, image, scroll-view, input {
  box-sizing: border-box;
}

/* page 锁定视口高度，开启 Flex 列布局 */
page {
  height: 100vh !important;
  display: flex !important;
  flex-direction: column !important;
  background-color: #f7f7f7;
  overflow: hidden; /* 禁止页面级滚动，只允许内部 scroll-view 滚动 */
}

.container {
  flex: 1; /* 填满 page */
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  padding: 0; /* 清除可能存在的默认 padding */
}

/* === 2. 头部区域重构 (取消 Fixed，改为 Flex Item) === */
.fixed-header {
  position: relative !important; /* 强制取消 fixed 定位，回归文档流 */
  top: auto !important;
  left: auto !important;
  flex-shrink: 0 !important;     /* 禁止头部被压缩 */
  width: 100%;
  background: #fff;
  z-index: 99;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.03);
}

/* 隐藏 WXML 中可能残留的占位块，彻底消除空白 */
.header-placeholder {
  display: none !important;
  height: 0 !important;
  margin: 0 !important;
  padding: 0 !important;
}

/* 头部内部布局微调 */
.header-row {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #fff;
}

/* 搜索框 */
.back-btn { margin-right: 16rpx; display: flex; align-items: center; }
.back-icon { font-size: 36rpx; font-weight: bold; }
.search-box { flex: 1; }
.search-inner {
  background: #f5f5f5;
  height: 68rpx;
  border-radius: 34rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.search-input { flex: 1; font-size: 26rpx; margin-left: 12rpx; color: #333; }
.ph-text { color: #999; }
.clear-icon { width: 36rpx; height: 36rpx; line-height: 36rpx; text-align: center; background: #ccc; color: #fff; border-radius: 50%; font-size: 22rpx; }

/* 排序栏 */
.sort-bar {
  display: flex;
  align-items: center;
  height: 80rpx;
  border-bottom: 1rpx solid #eee;
  background: #fff;
}
.sort-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  line-height: 80rpx;
}
.sort-item.active { color: #333; font-weight: bold; }
.sort-icon { width: 80rpx; text-align: center; color: #999; border-left: 1rpx solid #eee; }

/* === 3. 商品滚动区 (Flex 剩余空间分配) === */
.scroll-area {
  flex: 1 !important;    /* 强制填满剩余空间 */
  height: 0 !important;  /* 经典 Flex Hack：强制高度为 0，由 Flex 撑开 */
  width: 100%;
  background: #f7f7f7;
}

/* 商品列表容器：瘦身 Padding */
.goods-grid {
  width: 100%;
  padding: 10rpx; /* 仅保留 10rpx 间距，防止挤压 */
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-start;
}

/* === 4. 商品卡片优化 === */
.goods-card {
  width: 48.5%; /* 双列布局标准宽度 */
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
  display: flex;
  flex-direction: column;
}

.img-wrapper {
  width: 100%;
  height: 0;
  padding-bottom: 100%; /* 1:1 正方形图片占位 */
  position: relative;
  background: #f8f8f8;
}

.goods-img {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
}

/* 标签绝对定位 */
.badge-new {
  position: absolute; top: 10rpx; left: 10rpx;
  background: #333; color: #d4af37;
  font-size: 18rpx; padding: 4rpx 8rpx;
  border-radius: 4rpx; font-weight: bold;
}
.badge-stock {
  position: absolute; bottom: 10rpx; right: 10rpx;
  background: rgba(214, 48, 49, 0.9); color: #fff;
  font-size: 18rpx; padding: 4rpx 8rpx;
  border-radius: 6rpx; font-weight: 600; z-index: 10;
}

/* 内容详情区 */
.content {
  padding: 16rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title {
  font-size: 26rpx; color: #333; line-height: 1.4;
  margin-bottom: 12rpx;
  display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 2;
  overflow: hidden; text-overflow: ellipsis;
}

.tags-row { display: flex; align-items: center; justify-content: space-between; margin-bottom: 12rpx; }
.tag-member { font-size: 18rpx; color: #d4af37; background: #2b2b2b; padding: 2rpx 8rpx; border-radius: 6rpx; }
.sold-num { font-size: 18rpx; color: #ccc; }

.bottom-row { display: flex; align-items: flex-end; justify-content: space-between; }
.price-wrapper { display: flex; flex-direction: column; }
.price-current { color: #333; font-weight: bold; line-height: 1; margin-bottom: 4rpx; font-size: 28rpx; }
.price-origin { font-size: 20rpx; color: #ccc; text-decoration: line-through; }
.price-lowest { color: #ff4d4f; font-weight: bold; line-height: 1; margin-bottom: 4rpx; display: flex; align-items: baseline; }
.tag-coupon { font-size: 18rpx; border: 1px solid #ff4d4f; color: #ff4d4f; padding: 0 2rpx; border-radius: 4rpx; margin-right: 6rpx; transform: translateY(-1rpx); }

.symbol { font-size: 22rpx; margin-right: 2rpx; }
.num { font-size: 32rpx; }

.cart-btn {
  width: 50rpx; height: 50rpx;
  display: flex; align-items: center; justify-content: center;
  background: #f9f9f9; border-radius: 50%;
}
.cart-icon { font-size: 28rpx; }
.empty-tip { width: 100%; text-align: center; padding-top: 100rpx; color: #999; }