/* miniprogram/pages/pointShop/pointShop.wxss */
page { 
  background-color: #f8f8f8; 
}

.container {
  padding: 0;
  display: flex;
  flex-direction: column;
}

/* --- 头部黑金卡片 --- */
.header-card {
  margin: 30rpx;
  background: linear-gradient(135deg, #2b2b2b 0%, #1a1a1a 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  color: #d4af37;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.15);
  position: relative;
  overflow: hidden;
}

/* 装饰纹理 */
.header-card::after {
  content: '';
  position: absolute;
  top: -50%; left: -50%;
  width: 200%; height: 200%;
  background: radial-gradient(circle, rgba(212,175,55,0.05) 10%, transparent 60%);
  transform: rotate(30deg);
  pointer-events: none;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  position: relative; z-index: 1;
}
.label { font-size: 26rpx; opacity: 0.8; }
.history-btn { 
  font-size: 24rpx; 
  border: 1rpx solid rgba(212,175,55,0.3); 
  padding: 6rpx 20rpx; 
  border-radius: 30rpx;
  background: rgba(0,0,0,0.2);
}

.points-num {
  font-size: 80rpx;
  font-weight: bold;
  font-family: 'DIN Alternate', sans-serif;
  margin-bottom: 30rpx;
  position: relative; z-index: 1;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
}

.header-bottom {
  font-size: 22rpx;
  color: rgba(255,255,255,0.4);
  position: relative; z-index: 1;
}

/* --- 标题区 --- */
.section-title {
  padding: 0 30rpx 20rpx 30rpx;
  display: flex;
  align-items: center;
}
.section-title .icon { font-size: 32rpx; margin-right: 10rpx; }
.section-title .text { font-size: 30rpx; font-weight: bold; color: #333; }

/* --- 宫格布局 --- */
.grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 30rpx;
  justify-content: space-between;
}

.card {
  width: 48%; 
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
  display: flex;
  flex-direction: column;
  position: relative;
}

.img-box {
  height: 300rpx;
  background-color: #f9f9f9;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ccc;
  position: relative;
}
.img-box image { width: 100%; height: 100%; }
.no-img-text { font-size: 30rpx; letter-spacing: 2rpx; font-weight: bold; color: #e0e0e0; }

.stock-tag {
  position: absolute;
  top: 10rpx; left: 10rpx;
  background: rgba(0,0,0,0.6);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
}

.info { padding: 20rpx; flex: 1; display: flex; flex-direction: column; justify-content: space-between;}
.name { 
  font-size: 26rpx; 
  color: #333; 
  margin-bottom: 12rpx; 
  font-weight: 500;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.price-row { display: flex; align-items: center; color: #d4af37; font-weight: bold; }
.diamond { font-size: 22rpx; margin-right: 4rpx; }
.cost { font-size: 32rpx; font-family: 'DIN Alternate', sans-serif;}

.btn-redeem {
  width: 100%;
  border-radius: 0;
  font-size: 26rpx;
  padding: 20rpx 0;
  background: #2b2b2b;
  color: #d4af37;
  font-weight: bold;
  line-height: 1.5;
  margin: 0;
}
.btn-redeem::after { border: none; }

.btn-redeem.disabled {
  background: #f0f0f0;
  color: #ccc;
}