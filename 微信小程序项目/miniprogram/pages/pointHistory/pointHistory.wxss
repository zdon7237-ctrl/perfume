/* miniprogram/pages/pointHistory/pointHistory.wxss */
page { 
  background-color: #f9f9f9; 
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 0;
}

/* --- 头部黑金卡片 --- */
.overview-card {
  margin: 30rpx 30rpx 10rpx 30rpx;
  background: linear-gradient(135deg, #2b2b2b 0%, #1a1a1a 100%);
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  color: #d4af37;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.15);
  position: relative;
  overflow: hidden;
  flex-shrink: 0; /* 防止被挤压 */
}

.overview-label {
  font-size: 24rpx;
  color: rgba(255,255,255,0.6);
  margin-bottom: 16rpx;
  position: relative; z-index: 2;
}

.overview-num {
  font-size: 72rpx;
  font-weight: bold;
  font-family: 'DIN Alternate', sans-serif;
  position: relative; z-index: 2;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
}

/* 背景装饰文字 */
.overview-bg-icon {
  position: absolute;
  right: -20rpx;
  bottom: -40rpx;
  font-size: 120rpx;
  font-weight: 900;
  color: rgba(255,255,255,0.03);
  pointer-events: none;
  z-index: 1;
  font-style: italic;
}

/* --- 列表标题 --- */
.list-title {
  padding: 30rpx 30rpx 20rpx 30rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  flex-shrink: 0;
}

/* --- 列表滚动区 --- */
.history-list {
  flex: 1;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.history-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

/* 左侧 */
.left-box {
  display: flex;
  align-items: center;
}

.icon-circle {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 24rpx;
}
.icon-circle.gold {
  background: #fff8e1; /* 淡金背景 */
  color: #d4af37;
}
.icon-circle.dark {
  background: #f5f5f5;
  color: #666;
}

.info {
  display: flex;
  flex-direction: column;
}

.desc {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.time {
  font-size: 22rpx;
  color: #999;
}

/* 右侧数字 */
.amount {
  font-size: 32rpx;
  font-weight: bold;
  font-family: 'DIN Alternate', sans-serif;
}
.amount.plus {
  color: #d4af37; /* 金色 */
}
.amount.minus {
  color: #333; /* 黑色 */
}

/* 空状态 */
.empty-state {
  margin-top: 100rpx;
  text-align: center;
  color: #999;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}