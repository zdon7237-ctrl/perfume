/* miniprogram/pages/brands/brands.wxss */
page {
  height: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch; 
  padding: 0;
  width: 100%;
  box-sizing: border-box;
}

/* --- 顶部搜索栏 --- */
.search-header {
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx; 
  border-bottom: 1rpx solid #f5f5f5;
  box-sizing: border-box;
  flex-shrink: 0; 
  width: 100%;
}

.search-bar {
  flex: 1;
  height: 68rpx;
  background: #f7f7f7;
  border-radius: 8rpx; 
  display: flex;
  align-items: center;
  /* 修改：改为左对齐，方便输入 */
  justify-content: flex-start; 
  padding: 0 20rpx;
}

.search-bar icon { 
  margin-right: 12rpx; 
  flex-shrink: 0; /* 防止图标被压缩 */
}

/* 输入框样式 */
.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  height: 100%;
}

.ph-style {
  color: #b2b2b2;
}

.clear-btn {
  padding: 10rpx;
  display: flex;
  align-items: center;
}

/* --- 主体区域 --- */
.main-body {
  flex: 1;
  display: flex;
  overflow: hidden; 
  width: 100%;
}

/* 左侧导航 */
.nav-left {
  width: 180rpx;
  height: 100%;
  background: #f8f8f8;
  flex-shrink: 0;
}

.nav-item {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #666;
  position: relative;
}

.nav-item.active {
  background: #fff;
  color: #333;
  font-weight: bold;
  font-size: 28rpx;
}

.active-line {
  position: absolute;
  left: 0;
  top: 32rpx;
  bottom: 32rpx;
  width: 6rpx; 
  background: #333;
  border-radius: 0 4rpx 4rpx 0;
}

/* 右侧内容 */
.content-right {
  flex: 1;
  height: 100%;
  background: #fff;
  padding: 0 20rpx; 
  box-sizing: border-box;
}

/* 大标题 */
.category-banner {
  padding: 40rpx 0 30rpx 10rpx;
  font-size: 30rpx;
  font-weight: 900;
  color: #333;
  display: flex;
  align-items: center;
}
.category-banner::before {
  content: '';
  width: 6rpx;
  height: 24rpx;
  background: #333;
  margin-right: 12rpx;
  border-radius: 2rpx;
}

/* 品牌网格 */
.brand-grid {
  display: flex;
  flex-wrap: wrap;
}

.brand-card {
  width: 33.33%; 
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 10rpx; 
  box-sizing: border-box;
}

.logo-box {
  width: 90rpx; 
  height: 90rpx;
  border: 1rpx solid #f0f0f0; 
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.logo-box image { width: 100%; height: 100%; }
.logo-txt { font-size: 36rpx; font-weight: bold; color: #e0e0e0; }

.brand-name {
  font-size: 22rpx; 
  color: #333;
  text-align: center;
  width: 100%;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; 
  overflow: hidden;
  height: 58rpx; 
}

/* 空结果提示 */
.empty-tip {
  width: 100%;
  text-align: center;
  color: #999;
  font-size: 26rpx;
  margin-top: 50rpx;
}

/* --- 悬浮按钮 --- */
.float-btns {
  position: fixed;
  bottom: 30px;
  right: 20px;
  display: flex;
  flex-direction: column;
  gap: 15px;
  z-index: 99;
}

.float-btn {
  width: 40px;
  height: 40px;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
}