/* miniprogram/pages/cart/cart.wxss */
page { 
  background-color: #FFFFFF;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, sans-serif;
  color: #121212;
  /* 底部留白给 TabBar (约 100rpx) + Footer (约 100rpx) */
  padding-bottom: calc(200rpx + env(safe-area-inset-bottom));
}

.luxury-serif {
  font-family: 'Didot', 'Times New Roman', serif;
}

.container {
  padding: 0;
  overflow-x: hidden;
}

/* --- Header --- */
.header-bar {
  position: sticky; 
  top: 0; 
  z-index: 99;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.03);
}

.header-content {
  display: flex; 
  justify-content: space-between; 
  align-items: center;
  margin-bottom: 8rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  color: #121212;
}

.manage-btn {
  font-size: 26rpx;
  color: #121212;
  border: 1rpx solid #E5E5E5;
  padding: 8rpx 24rpx;
  border-radius: 4rpx;
}

.header-subtitle {
  font-size: 22rpx;
  color: #888;
  letter-spacing: 1rpx;
}

/* --- Cart List (Movable) --- */
.cart-list {
  padding-top: 20rpx;
}

.item-area {
  width: 100vw;
  height: 260rpx; 
  background: #fff;
}

.item-view {
  width: calc(100vw + 160rpx); 
  height: 100%;
  display: flex;
}

/* --- 商品内容区 --- */
.cart-item-content {
  width: 100vw;
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  box-sizing: border-box;
  background: #fff;
  border-bottom: 1rpx solid #F5F5F5;
}

.slide-delete-btn {
  width: 160rpx;
  height: 100%;
  background-color: #D63031;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
}

.checkbox-col {
  margin-right: 30rpx;
}
.checkbox {
  width: 40rpx; height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #D1D5DB;
  display: flex; align-items: center; justify-content: center;
  transition: all 0.2s;
}
.checkbox.checked {
  background: #121212;
  border-color: #121212;
}
.check-icon {
  color: #fff; font-size: 24rpx;
}

.image-box {
  width: 180rpx; height: 180rpx;
  background: #F9F9F9;
  border-radius: 4rpx;
  margin-right: 30rpx;
  overflow: hidden;
}
.goods-img {
  width: 100%; height: 100%;
  mix-blend-mode: multiply;
}

.info-box {
  flex: 1;
  height: 180rpx;
  display: flex; 
  flex-direction: column; 
  justify-content: space-between;
  padding: 4rpx 0;
}

.brand {
  display: block;
  font-size: 24rpx;
  font-weight: bold;
  color: #121212;
  text-transform: uppercase;
  letter-spacing: 3rpx;
  margin-bottom: 8rpx;
}

.name {
  font-size: 26rpx;
  color: #555;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.spec-tag {
  font-size: 20rpx;
  color: #999;
  display: inline-block;
}

.info-bottom {
  display: flex; justify-content: space-between; align-items: flex-end;
}

.price {
  font-size: 32rpx;
  font-weight: 500;
  font-family: serif;
}

.stepper-minimal {
  display: flex;
  align-items: center;
  border: 1rpx solid #E5E5E5;
  border-radius: 2rpx;
  height: 44rpx;
}

.step-btn {
  width: 44rpx;
  height: 100%;
  position: relative;
}

.step-btn::after {
  content: ''; position: absolute;
  top: 50%; left: 50%; transform: translate(-50%, -50%);
  background: #121212;
}
.step-btn.minus::after { width: 16rpx; height: 2rpx; }
.step-btn.plus::after { width: 16rpx; height: 2rpx; }
.step-btn.plus::before {
  content: ''; position: absolute;
  top: 50%; left: 50%; transform: translate(-50%, -50%);
  width: 2rpx; height: 16rpx; background: #121212;
}

.step-num {
  font-size: 24rpx;
  width: 50rpx;
  text-align: center;
  font-weight: 500;
}

/* --- Coupon --- */
.coupon-section {
  padding: 0 40rpx;
  margin-top: 30rpx;
}
.coupon-row {
  display: flex; justify-content: space-between; align-items: center;
  padding: 30rpx 0;
  border-top: 1rpx solid #F0F0F0;
  border-bottom: 1rpx solid #F0F0F0;
}
.coupon-label { display: flex; align-items: center; font-size: 26rpx; color: #121212; font-weight: 500; }
.coupon-label .icon { margin-right: 16rpx; font-size: 30rpx; }
.coupon-value { font-size: 26rpx; color: #B6965B; display: flex; align-items: center; }
.coupon-value .placeholder { color: #999; }
.coupon-value .arrow { color: #ccc; margin-left: 10rpx; font-size: 30rpx; }

/* --- Footer --- */
.footer-wrapper {
  position: fixed; 
  bottom: 0; 
  left: 0; 
  width: 100%;
  z-index: 100;
  background: #FFFFFF;
  border-top: 1rpx solid #F0F0F0;
  /* 移除了额外的 safe-area padding，使其紧贴 TabBar */
}

.footer-content {
  display: flex; 
  justify-content: space-between; 
  align-items: center;
  height: 96rpx; /* 紧凑高度 */
  padding: 0 40rpx;
}

.all-check-group {
  display: flex; align-items: center; gap: 16rpx;
}
.all-text { font-size: 26rpx; color: #555; }
.checkbox.small { width: 36rpx; height: 36rpx; }

.footer-right {
  display: flex; align-items: center; gap: 32rpx;
}

.total-box {
  text-align: right;
  margin-right: 10rpx;
}
.total-label { font-size: 24rpx; color: #555; margin-right: 12rpx; }
.total-price { font-size: 36rpx; font-weight: bold; font-family: serif; }

.action-btn {
  height: 72rpx;
  padding: 0 40rpx;
  display: flex; align-items: center; justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
  border-radius: 4rpx;
  letter-spacing: 1rpx;
}

.action-btn.checkout {
  background: #121212;
  color: #fff;
}

.action-btn.delete {
  background: #fff;
  color: #D63031;
  border: 1rpx solid #D63031;
}

/* Empty State */
.empty-state {
  padding-top: 200rpx; text-align: center;
}
.empty-icon { font-size: 80rpx; margin-bottom: 20rpx; opacity: 0.3; }
.empty-text { font-size: 28rpx; color: #999; letter-spacing: 2rpx; margin-bottom: 60rpx; }
.go-shop-btn {
  display: inline-block;
  padding: 20rpx 60rpx;
  background: #121212;
  color: #fff;
  font-size: 26rpx;
  letter-spacing: 2rpx;
}