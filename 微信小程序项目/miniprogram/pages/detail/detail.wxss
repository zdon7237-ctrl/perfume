/* miniprogram/pages/detail/detail.wxss */
page { background: #f7f7f7; padding-bottom: 0; }

.hero-img {
  width: 100%;
  height: 750rpx; /* 正方形大图 */
  background: #fff;
}

.info-card {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.price-row {
  display: flex; justify-content: space-between; align-items: flex-end;
  margin-bottom: 20rpx;
}
.price { color: #d4af37; font-weight: bold; font-size: 28rpx; }
.price .num { font-size: 48rpx; }
.sold { color: #999; font-size: 24rpx; }

.brand { font-size: 28rpx; color: #666; letter-spacing: 2rpx; margin-bottom: 10rpx; }
.name { font-size: 40rpx; font-weight: bold; color: #333; margin-bottom: 16rpx; }
.desc { font-size: 28rpx; color: #888; line-height: 1.5; }

.detail-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.section-title {
  font-size: 30rpx; font-weight: bold; 
  border-left: 8rpx solid #d4af37; 
  padding-left: 20rpx;
  margin-bottom: 30rpx;
}
.rich-text { font-size: 28rpx; color: #333; line-height: 1.8; }

/* 底部栏 */
.bottom-bar {
  position: fixed; bottom: 0; left: 0; width: 100%;
  height: 110rpx;
  background: #fff;
  display: flex; align-items: center;
  padding: 0 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  box-sizing: border-box;
  z-index: 10;
}

.icon-btn {
  width: 100rpx; display: flex; flex-direction: column; 
  align-items: center; font-size: 20rpx; color: #666;
  background: transparent; padding: 0; margin: 0; line-height: 1.2;
}
.icon-btn text:first-child { font-size: 36rpx; margin-bottom: 4rpx; }

.btn-group {
  flex: 1; display: flex; margin-left: 20rpx;
}
.btn {
  flex: 1; text-align: center; line-height: 80rpx; color: #fff; font-size: 28rpx; font-weight: bold;
}
.btn.cart {
  background: #333;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
}
.btn.buy {
  background: #d4af37;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

/* --- 分享面板样式 --- */
.share-mask {
  position: fixed; top: 0; left: 0; width: 100%; height: 100%;
  background: rgba(0,0,0,0.5); z-index: 99;
}
.share-panel {
  position: fixed; bottom: 0; left: 0; width: 100%;
  background: #fff; z-index: 100;
  border-top-left-radius: 24rpx; border-top-right-radius: 24rpx;
  transform: translateY(100%); transition: transform 0.3s;
  padding-bottom: env(safe-area-inset-bottom);
}
.share-panel.active { transform: translateY(0); }

.share-title { text-align: center; font-size: 32rpx; font-weight: bold; padding: 30rpx 0; color: #333; }
.share-body { display: flex; padding: 20rpx 60rpx 50rpx 60rpx; justify-content: space-around; }

.share-item {
  display: flex; flex-direction: column; align-items: center; font-size: 24rpx; color: #666;
  background: transparent; line-height: 1.5; margin: 0; padding: 0;
}
.share-item::after { border: none; } /* 去除button默认边框 */

.share-icon {
  width: 100rpx; height: 100rpx; border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  font-size: 48rpx; margin-bottom: 16rpx;
}
.share-icon.wx { background: #e7f8ec; color: #07c160; }
.share-icon.link { background: #f0f0f0; color: #333; }

.share-cancel {
  border-top: 1rpx solid #eee; text-align: center; line-height: 100rpx; font-size: 30rpx; color: #333;
}