<view class="container">
  <view class="card">
    <view class="title">当前余额</view>
    <view class="balance">¥ {{balance}}</view>
  </view>

  <view class="input-box">
    <view class="label">充值金额</view>
    <input type="digit" class="input" placeholder="请输入金额" bindinput="onInput" />
  </view>

  <button class="btn" bindtap="onTopUp">立即充值</button>
</view>